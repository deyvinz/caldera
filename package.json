{
  "name": "naija-tours-platform",
  "version": "1.0.0",
  "description": "Luxury Global Travel Platform - NestJS API",
  "private": true,
  "workspaces": [
    "apps/*",
    "web"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
