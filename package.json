{
  "name": "naija-tours-platform",
  "version": "1.0.0",
  "description": "Luxury Global Travel Platform - NestJS API",
  "private": true,
  "workspaces": [
    "apps/*",
    "web"
  ],
  "scripts": {
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "build:all": "run-p build:api build:web",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "clean": "pnpm -r clean",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "dev:all": "run-p dev:api dev:web"
  },
  "devDependencies": {
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
